#:import random random

#:set top_height 200

<ScatterTextWidget>:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        height: top_height
        size_hint_y: None

        TextInput:
            id: textinput
            font_size: top_height * 0.8
            text: 'default'
            size_hint_x: .6
            # on_text: root.change_label_colour()
            on_text: label_copy.color = [random.random() for i in range(3)] + [1]

        Slider:
            id: slider
            orientation: 'vertical'
            min: 10
            max: 300
            value: 75
            size_hint_x: .2

        Label:
            id: label_textsize
            text: "Min text size: " + str(slider.min) + "\n" + "Max text size: " + str(slider.max) + "\n" + "Text size:\n" + str(slider.value)
            size_hint_x: .2
            font_size: top_height * .2

    FloatLayout:
        Scatter:
            id: scatter
            pos: (0, 0)
            Label:
                id: label_copy
                text: textinput.text
                font_size: slider.value
                color: (1, 0, 0 , 0.5)
                halign: 'center'
                text_size: (scatter.width, None)
                pos: (scatter.width/2, scatter.height/2)
