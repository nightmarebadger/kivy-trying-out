<ScatterTextWidget>:
    orientation: 'vertical'

    TextInput:
        id: textinput
        height: 200
        size_hint_y: None
        font_size: 150
        text: 'default'
        on_text: root.change_label_colour()

    FloatLayout:
        Scatter:
            id: scatter

            Label:
                id: label_copy
                text: textinput.text
                font_size: 150
                halign: 'center'
                text_size: (scatter.width, None)
                pos: (root.width * .5, scatter.height * .5)
                color: root.text_colour

            Label:
                text: textinput.text[:3][::-1]
                font_size: 100
                color: root.text_colour
                size_hint_x: .5
                pos: (scatter.width * .1, 0)
                halign: 'left'

            Label:
                text: textinput.text[-3:][::-1]
                font_size: 100
                color: root.text_colour
                size_hint_x: .5
                pos: (scatter.width * .9, 0)
                halign: 'right'
