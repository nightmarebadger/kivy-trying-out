<ScatterTextWidget>:
    orientation: 'vertical'

    TextInput:
        id: textinput
        height: 200
        size_hint_y: None
        font_size: 150
        text: 'default'
        on_text: root.change_label_colour()

    FloatLayout:
        Scatter:
            id: scatter
            pos: (0, 0)

            Label:
                id: label_copy
                text: textinput.text
                font_size: 150
                halign: 'center'
                text_size: (scatter.width, None)
                pos: (scatter.width/2, scatter.height/2)
                color: root.text_colour

    BoxLayout:
        orientation: 'horizontal'
        height: 150
        size_hint_y: None

        Label:
            text: textinput.text[:3][::-1]
            font_size: 100
            color: root.text_colour

        Label:
            text: textinput.text[-3:][::-1]
            font_size: 100
            color: root.text_colour
